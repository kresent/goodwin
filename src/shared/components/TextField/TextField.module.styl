.container
  display flex
  align-items center
  position relative
  width 100%
  height 48px
  border-radius 2px
  background-color #fff
  box-shadow 0 4px 4px 0 rgba(83, 109, 254, 0.24), 0 0 4px 0 rgba(83, 109, 254, 0.12)
  transition box-shadow 0.3s

  &[disabled]
    opacity 0.3
    box-shadow 0 2px 2px 0 rgba(83, 109, 254, 0.24), 0 0 2px 0 rgba(83, 109, 254, 0.12)


.containerFocus
  composes container
  box-shadow 0 8px 8px 0 rgba(83, 109, 254, 0.24), 0 0 8px 0 rgba(83, 109, 254, 0.12)

  .iconLeft
    opacity 1

.containerError
  composes container
  box-shadow 0 4px 4px 0 rgba(255, 64, 129, 0.24), 0 0 4px 0 rgba(255, 64, 129, 0.12)

  .input
    color #ff4081

.icon
  flex-shrink 0
  margin 12px 16px
  transition opacity 0.3s
  opacity 0.5

.iconLeft
  composes icon

.iconRight
  composes icon

.input
  width 100%
  height 100%
  box-sizing border-box
  border none
  font-size 14px
  letter-spacing 0.6px
  color rgba(38, 50, 57, 0.87)
  outline none
