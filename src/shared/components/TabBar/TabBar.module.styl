.wrapper
  display flex
  align-items center

  position relative
  width 100%
  height 56px
  background-color rgba(250, 250, 250, 0.95)

.navTab
  display flex
  position relative
  width 100%
  height 48px
  margin 0 8px
  opacity .5
  transition opacity .3s
  > svg
    margin auto

.navTabActive
  composes navTab
  opacity 1
  > svg
    filter drop-shadow(0px 2px 2px rgba(#000, .24))

.navTabCabinete
  composes navTab
  opacity 1
  .ripple,
  .logo
    display none
    position absolute
    top 50%
    left 50%
    width 40px
    height 40px
    margin-top -20px
    margin-left -20px
    border-radius 50%
    background-color rgba(255, 64, 129, 0.54)
  .logo
    display inline-block
    background-color transparent
    background-image url('../../../../public/images/logo_x3_40px.png')
    background-position center
    background-size cover

.navTabCabineteActive
  composes navTabCabinete
  .ripple
    display block
    animation pulse 2s infinite
  .logo
    box-shadow 0 4px 4px 0 rgba(255, 64, 129, 0.24), 0 0 4px 0 rgba(255, 64, 129, 0.12)

.divider
  flex 0 0 auto
  display inline-block
  width 1px
  height 40px
  background-color rgba(96, 125, 139, .3)

@keyframes pulse
  0%
    transform scale3d(1, 1, 1)
    opacity 1
  50%
    transform scale3d(2, 2, 2)
    opacity 0
  100%
    transform scale3d(1, 1, 1)
    opacity 0
